---
import Section from "../Section.astro"

import { education, sections } from "@cv"
---

<Section title={sections[0].educationTitle}>
  <ul>
    {
      education.map(({ institution, startDate, endDate, area }) => {
        const formatDate = (date: string | null): string => {
          if (!date) return "Actual";
          const d = new Date(date);
          const month = String(d.getMonth() + 1).padStart(2, '0');
          const year = d.getFullYear();
          return `${month}/${year}`;
        };

        const start = formatDate(startDate);
        const end = formatDate(endDate);

        const period = end === "Actual" ? `${start} - ${end}` : `${start} - ${end}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>
                <time>{period}</time>
              </header>
              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
